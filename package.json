{
  "name": "aws-cloud-projects",
  "version": "1.0.0",
  "description": "A comprehensive collection of AWS cloud projects demonstrating various services, architectures, and best practices",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "security:audit": "npm audit --audit-level=moderate",
    "validate:terraform": "find . -name '*.tf' -not -path './.terraform/*' | xargs -I {} dirname {} | sort -u | xargs -I {} sh -c 'cd {} && terraform validate'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/your-username/aws-cloud-projects.git"
  },
  "keywords": [
    "aws",
    "cloud",
    "terraform",
    "docker",
    "kubernetes",
    "serverless",
    "microservices",
    "devops",
    "ci-cd",
    "monitoring",
    "security",
    "data-analytics",
    "machine-learning"
  ],
  "author": "Your Name",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/your-username/aws-cloud-projects/issues"
  },
  "homepage": "https://github.com/your-username/aws-cloud-projects#readme",
  "devDependencies": {
    "eslint": "^8.53.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "jest": "^29.7.0",
    "prettier": "^3.0.3"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=9.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "**/*.{js,jsx,ts,tsx}",
      "!**/node_modules/**",
      "!**/coverage/**",
      "!**/*.config.js",
      "!**/dist/**",
      "!**/build/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 80,
    "tabWidth": 2
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "prettier"
    ],
    "plugins": [
      "prettier"
    ],
    "rules": {
      "prettier/prettier": "error"
    },
    "env": {
      "node": true,
      "es2022": true,
      "jest": true
    }
  }
}
